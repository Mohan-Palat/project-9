<h3>Add or Update Movies</h3>
<form action="/driveins/<%= drivein.id %>/edit?_method=PUT" method="POST">
  
  <% movies.forEach((movie, index) => { %>
  <input
    type="checkbox"
    id="<%= movie.title %>"
    name="movies"
    value="<%= movie.id %>"
  />
  <label for="<%= movie.title %>"><%= movie.title %></label><br/>

  <input
  type="checkbox"
  id="time7"
  name="<%= movie.id %>"
  value="7:00"
  />
  <label for="time7">7:00</label><br/>

  <input
    type="checkbox"
    id="time8"
    name="<%= movie.id %>"
    value="8:00"
  />
  <label for="time8">8:00</label><br/>

  <input
    type="checkbox"
    id="time9"
    name="<%= movie.id %>"
    value="9:00"
  />
  <label for="time9">9:00</label><br/>
  <br>
  
  <% })%>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
