<h1><%= drivein.name %>'s Detail Page</h1>

<h1>Movies</h1>
<ul>
    <% for (let i=0; i<drivein.movies.length; i++) { %>
  <li>
    <h3><a href="/movies/<%= drivein.movies[i].id %>"><%= drivein.movies[i].title %></a></h3>

    <div class="showtimes">Showtimes:</div>
    <ul>
    <% if (drivein.showtimes[i] != null) {%>
      <% for (let j=0; j<drivein.showtimes[i].movieshowtimes.length; j++) { %>
        <li><div class="showtime"><%= drivein.showtimes[i].movieshowtimes[j] %></div></li>
      <% } %>
    <% } %>
    </ul>

    <form action="/driveins/<%= drivein.id %>/movies/<%= drivein.movies[i].id %>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
    </form>
    <br>
  </li>
  <% } %>
</ul>

